<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Time"
                    android:layout_width="146sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"/>
            <TextView
                    android:text="EstÃ¡dio"
                    android:layout_width="133sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="24sp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="Loja"
                    android:layout_width="133sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="133sp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/soccerplayer"
                    android:id="@+id/btn_time" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="133sp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/soccer_field"
                    android:id="@+id/btn_estadio"/>
            <ImageButton
                    android:layout_width="133sp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/cart" android:id="@+id/btn_carrinho"/>
        </LinearLayout>
        <Button
                android:text="Jogar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:textColor="#FFFFFF"
                android:background="#4683C0"
                android:id="@+id/btn_jogar" android:padding="20dp"/>
        <Button
                android:text="Ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:textColor="#FFFFFF"
                android:background="#4683C0"
                android:id="@+id/btn_ranking" android:padding="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>